<%
=begin%>
 <p id="notice"><%= notice %></p> 
<%
=end%>

<div class="container-fluid">
  <div class="row">
    <div class="col-2">
      <p>Heloo, <%= current_user.username %>
        <%= render 'form', room: Room.new %>
        <hr>
        <% @rooms.each do |room| %>
          <%= link_to room do %>
          <div class="card mb-2">
            <div class=card-body>
              <%= room.name %>
            </div>
          </div>
          <% end %>
        <% end %>
    </div>
    <div class="col-10">
      <% if @room.present? %>
        <div class="chat-room">
          <p><%= @room.name %></p>
          <% @room.messages.each do |message| %>
            <p><%= message.content%></p>
          <%end%>
          <div class="chat-box">
            <%= render 'messages/form', message: Message.new %>
          </div>
        </div>
      <%end%>
    </div>
  </div>
</div>